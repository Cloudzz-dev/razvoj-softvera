# ===========================================
# DFDS Environment Configuration Template
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# DATABASE (Required)
# ===========================================
# Docker Compose local setup:
DATABASE_URL=postgresql://dfds_user:your_secure_password@postgres:5432/dfds?schema=public
DB_USER=dfds_user
DB_PASSWORD=your_secure_password
DB_NAME=dfds
DB_PORT=5432

# Supabase/External PostgreSQL (alternative):
# DATABASE_URL="postgres://[user]:[password]@[host]:6543/[db]?pgbouncer=true"
# DIRECT_URL="postgres://[user]:[password]@[host]:5432/[db]"

# ===========================================
# AUTHENTICATION (Required)
# ===========================================
NEXTAUTH_URL=http://localhost:3753
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=generate_a_secure_secret_at_least_32_chars

# ===========================================
# OAUTH PROVIDERS (Optional)
# ===========================================
GITHUB_ID=
GITHUB_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ===========================================
# EXTERNAL SERVICES (Optional)
# ===========================================
# OpenAI - Required for AI assistant features
OPENAI_API_KEY=

# Resend - Required for email features
RESEND_API_KEY=

# PostHog - Analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=

# ===========================================
# REAL-TIME MESSAGING (Soketi/Pusher)
# ===========================================
# Server-side Pusher config
PUSHER_HOST=soketi
PUSHER_PORT=6001
SOKETI_DEFAULT_APP_ID=dfds-app
SOKETI_DEFAULT_APP_SECRET=your_soketi_secret_here

# Client-side Pusher config
NEXT_PUBLIC_PUSHER_KEY=dfds-key
NEXT_PUBLIC_PUSHER_HOST=localhost
NEXT_PUBLIC_PUSHER_PORT=6001

# ===========================================
# INFRASTRUCTURE (Optional)
# ===========================================
# Redis for rate limiting (falls back to memory if not set)
REDIS_URL=redis://redis:6379

# Internal API key for service-to-service auth
# Generate with: openssl rand -base64 32
INTERNAL_API_KEY=

# Crypto payments wallet address
WALLET_ADDRESS=

# ===========================================
# APPLICATION CONFIG
# ===========================================
APP_PORT=3753
NODE_ENV=development
LOG_LEVEL=info

# Load Balancer (optional, for nginx profile)
LB_PORT=80
LB_SSL_PORT=443
